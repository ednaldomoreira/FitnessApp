<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ViewFlipper android:id="@+id/ViewFlipperAdcExerc" 
	    android:layout_width="fill_parent" 
	    android:layout_height="0dip"
	    android:layout_weight="1">
	    <include android:id="@+id/libraryViewAdcExerc1"  layout="@layout/programa_atividades_aerobico" />
	    <include android:id="@+id/libraryViewAdcExerc2"  layout="@layout/programa_atividades_peitorais" />
	    <include android:id="@+id/libraryViewAdcExerc3"  layout="@layout/programa_atividades_costas" />
	    <include android:id="@+id/libraryViewAdcExerc4"  layout="@layout/programa_atividades_ombros" />
	    <include android:id="@+id/libraryViewAdcExerc5"  layout="@layout/programa_atividades_triceps" />
	    <include android:id="@+id/libraryViewAdcExerc6"  layout="@layout/programa_atividades_biceps" />    
	    <include android:id="@+id/libraryViewAdcExerc7"  layout="@layout/programa_atividades_ant_coxa" />
	    <include android:id="@+id/libraryViewAdcExerc8"  layout="@layout/programa_atividades_post_coxa" />
	    <include android:id="@+id/libraryViewAdcExerc9"  layout="@layout/programa_atividades_gluteos" />
	    <include android:id="@+id/libraryViewAdcExerc10" layout="@layout/programa_atividades_adutores" />
	    <include android:id="@+id/libraryViewAdcExerc11" layout="@layout/programa_atividades_panturrilha" />
	    <include android:id="@+id/libraryViewAdcExerc12" layout="@layout/programa_atividades_abdominal" />
	    
	</ViewFlipper>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    <Button
	        android:id="@+id/ant_button_at"
	        android:layout_width="70dp"
	        android:layout_height="wrap_content"
	        android:text="Ant">
	    </Button>
	    <Button
	        android:id="@+id/ok_button_at"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="Continuar">
	    </Button>
	    <Button
	        android:id="@+id/prox_button_at"
	        android:layout_width="70dp"
	        android:layout_height="wrap_content"
	        android:text="Prox">
	    </Button>
	    	    	    
    </LinearLayout>
</LinearLayout>
